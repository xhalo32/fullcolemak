# English (US), Colemak keyboard layout.
# With full international layout as intended
#
type OVERLAY
map key 18 F
map key 19 P
map key 20 G
map key 21 J
map key 22 L
map key 23 U
map key 24 Y
map key 25 SEMICOLON
map key 31 R
map key 32 S
map key 33 T
map key 34 D
map key 36 N
map key 37 E
map key 38 I
map key 39 O
map key 49 K
### ROW 1
key GRAVE {
    label:                              '`'
    base:                               '`'
    shift:                              '~'
    ralt:                               '\u0303'
    ralt+shift:                         '\u007e'
}
key 1 {
    label:                              '1'
    base:                               '1'
    shift:                              '!'
    ralt:                               '\u00a1'
    ralt+shift:                         '\u00b9'
}
key 2 {
    label:                              '2'
    base:                               '2'
    shift:                              '@'
    ralt:                               '\u00ba'
    ralt+shift:                         '\u00b2'
}
key 3 {
    label:                              '3'
    base:                               '3'
    shift:                              '#'
    ralt:                               '\u00aa'
    ralt+shift:                         '\u00b3'
}
key 4 {
    label:                              '4'
    base:                               '4'
    shift:                              '$'
    ralt:                               '\u00a2'
    ralt+shift:                         '\u00a3'
}
key 5 {
    label:                              '5'
    base:                               '5'
    shift:                              '%'
    ralt:                               '\u20ac'
    ralt+shift:                         '\u00a5'
}
key 6 {
    label:                              '6'
    base:                               '6'
    shift:                              '^'
    ralt:                               '\u0127'
    ralt+shift:                         '\u0126'
}
key 7 {
    label:                              '7'
    base:                               '7'
    shift:                              '&'
    ralt:                               '\u00f0'
    ralt+shift:                         '\u00d0'
}
key 8 {
    label:                              '8'
    base:                               '8'
    shift:                              '*'
    ralt:                               '\u00fe'
    ralt+shift:                         '\u00de'
}
key 9 {
    label:                              '9'
    base:                               '9'
    shift:                              '('
    ralt:                               '\u2018'
    ralt+shift:                         '\u201c'
}
key 0 {
    label:                              '0'
    base:                               '0'
    shift:                              ')'
    ralt:                               '\u2019'
    ralt+shift:                         '\u201d'
}
key MINUS {
    label:                              '-'
    base:                               '-'
    shift:                              '_'
    ralt:                               '\u2013'
    ralt+shift:                         '\u2014'
}
key EQUALS {
    label:                              '='
    base:                               '='
    shift:                              '+'
    ralt:                               '\u00d7'
    ralt+shift:                         '\u00f7'
}
